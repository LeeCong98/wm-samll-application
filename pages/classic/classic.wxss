.classic-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  border-top: 1x solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  padding: 0px 10rpx;
}
.navi {
  position: absolute;
  bottom: 40rpx;
}
.episoide {
   margin-left:10px; 
   margin-top:7px;
}
.like {
  margin-right: 45px;
  margin-top:12rpx;
}
.share {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  display: block;
  background: transparent;
  border: none;
}
.share image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 2;
}
/* 覆盖样式 */
.share::after {
  content: "";
  display: none;
}