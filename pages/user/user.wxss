.user-container {
  width: 100%;
}
.bg {
  width: 100%;
  height: 573rpx;
  display: block;
}
.header {
  height: 305rpx;
  display: flex;
  flex-wrap: wrap;
  position: absolute;
  top: 250rpx;
  width: 100%;
}
.avatar {
  display: flex; 
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: column;
  align-items: center;
  width: 100%;
}
.avatar .avatar-img {
  width: 128rpx;
  height: 128rpx;
  display: inline-block;
  /* 注意小程序这里 */
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 15rpx;
}
.avatar text {
  font-size: 34rpx;
  font-weight: normal;
  display: block;
  margin-top: 5rpx;
}
.user-like {
  background: #f4f4f4;
  display: flex;
  justify-content: space-around;
  padding: 0rpx 20rpx;
  flex-grow: row warp;
  flex-direction: row;
  /* 兼容处理 */
  -webkit-flex-wrap: wrap;
  -moz-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  -o-flex-wrap: wrap;
}
/* flex： justify-content居中兼容 */ 
.single::after {
  content: "";
  flex: auto;
}
.user-like like-item {
  margin-bottom: 15rpx;
}
.authorization {
  display: block;
  margin: 0rpx auto;
  background:  transparent;
  color: black;
  outline: none;
  padding: 0rpx;
}
.menu-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #999;
  font-size: 24rpx;
  line-height: 40rpx;
}
.menu-left {
  
}
.menu-left image, .menu-right text:first-child {
  width: 34rpx;
  height: 34rpx;
  display: block;
  margin-left: 50%;
  transform: translateX(-50%);
  padding-bottom: 20rpx;
}
/* .menu-right {
  
} */
.menu-right text:first-child {
  font-size: 36rpx;
  color: #000;
  display: block;
} 
.title {
  font-size: 34rpx;
  line-height: 113rpx;
  text-align: center;
  background-color: #f5f5f5;
}