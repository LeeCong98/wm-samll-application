.like-item {
  width: 330rpx;
  height: 472rpx;
  flex-direction: column;
  flex-wrap: warp;
  background: white;
}
.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.com {
  text-align: center;
  margin-right: 30rpx;
  background: #f5f5f5;
  height: 40rpx;
  width: 72rpx;
  font-size: 24rpx;
  display: inline-block;
  line-height: 40rpx;
}
.product-image {
  width: 100%;
}
.product-image image {
  width: 100%;
  height: 240rpx;
  display: block;
}
.description {
  margin: 30rpx auto;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #999;
  width: 285rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}